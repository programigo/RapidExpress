@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = "Home";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="d-block w-100" src="/images/logistics-truck.jpg" alt="First slide">
			<div class="carousel-caption d-none d-md-block">
				<div style="color: deepskyblue">
					<h3>
						<b>
							@Localizer["Same day delivery"]
						</b>
					</h3>
					<h4>
						<b>
							@Localizer["You receive your items on the same day that they are placed for delivery"]
						</b>
					</h4>
				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="/images/successfull-delivery.jpg" alt="Second slide">
			<div class="carousel-caption d-none d-md-block">
				<div style="color: deepskyblue">
					<h3>
						<b>
							@Localizer["Self-employee transporters"]
						</b>
					</h3>
					<h4>
						<b>
							@Localizer["Here, everyone can be a transporter"]
						</b>
					</h4>
				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="/images/non-stop-support.jpg" alt="Third slide">
			<div class="carousel-caption d-none d-md-block">
				<div style="color: deepskyblue">
					<h3>
						<b>
							24/7/365
						</b>
					</h3>
					<h4>
						<b>
							@Localizer["We are here for you non-stop"]
						</b>
					</h4>
				</div>

			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
