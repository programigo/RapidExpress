@model BidFormModel

<form method="post" onsubmit="return validateAmount()" asp-controller="Bids" asp-action="Create">
	<div class="form-group">
		<label asp-for="Amount">Amount</label>
		<input id="bid-amount" type="number" min="0" step="1" asp-for="Amount" class="first-part-input form-control mb-1" />
		<span asp-validation-for="Amount" class="text-danger"></span>
		<span class="amount-error text-danger" style="display:none">Bid amount must be at least 1.</span>
	</div>
	<div class="form-group">
		<label asp-for="Currency"></label>
		<select asp-for="Currency" asp-items="Html.GetEnumSelectList<BidCurrency>()" class="form-control"></select>
		<span asp-validation-for="Currency" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="hidden" asp-for="@Model.DeliveryId" value="@Model.DeliveryId" />
	</div>
	<button type="submit" class="btn btn-success">Create Bid</button>
</form>

@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial")

	<script>
		function validateAmount() {
			var amount = $("#bid-amount").val();
			if (amount == 0) {
				$("#amount-error").show();
				return false;
			}
			$("#amount-error").hide();
			return true;
		};
	</script>
}