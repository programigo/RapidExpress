@using RapidExpress.Web.Views.Manage
@inject SignInManager<User> SignInManager
@inject IViewLocalizer Localizer

@{
	var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
	<li class="@ManageNavPages.IndexNavClass(ViewContext)">
		<a asp-action="Index">
			@Localizer["Profile"]
		</a>
	</li>
	<li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)">
		<a asp-action="ChangePassword">
			@Localizer["Password"]
		</a>
	</li>
	@if (hasExternalLogins)
	{
		<li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)">
			<a asp-action="ExternalLogins">
				@Localizer["External logins"]
			</a>
		</li>
	}
</ul>

