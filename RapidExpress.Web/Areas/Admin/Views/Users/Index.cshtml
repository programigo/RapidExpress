@model IEnumerable<AdminUserListingViewModel>
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Users"];
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>
				@Localizer["Username"]
			</th>
			<th>
				@Localizer["Email"]
			</th>
			<th>
				@Localizer["Actions"]
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<th>
					@user.Username
				</th>
				<th>
					@user.Email
				</th>
				<th>
					<a asp-controller="Users" asp-action="Remove" asp-route-id="@user.Id" class="btn btn-danger">
						@Localizer["Remove"]
					</a>
				</th>
			</tr>
		}
	</tbody>
</table>