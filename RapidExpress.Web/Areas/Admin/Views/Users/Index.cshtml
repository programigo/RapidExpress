@model IEnumerable<AdminUserListingViewModel>
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Users"];
}

<h1 style="text-align:center">
	@ViewData["Title"]
</h1>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>
				@Localizer["Username"]
			</th>
			<th>
				@Localizer["Email"]
			</th>
			<th>
				@Localizer["Role"]
			</th>
			<th>
				@Localizer["Actions"]
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>
					<a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">
						@user.Username
					</a>
				</td>
				<td>
					@user.Email
				</td>
				<td>
					@Localizer[user.Role]
				</td>
				<td>
					<a asp-controller="Users" asp-action="Remove" asp-route-id="@user.Id" class="btn btn-danger">
						@Localizer["Remove"]
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>