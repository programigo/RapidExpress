@model IEnumerable<AdminUserListingViewModel>

@{
	ViewData["Title"] = "Pending user registrations";
}

<h1 style="text-align: center">@ViewData["Title"]</h1>

@if (Model.Count() > 0)
{
	<div class="table-responsive">

		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				@foreach (var user in Model)
				{
					<tr>
						<th><a asp-area="" asp-controller="Transporters" asp-action="Details" asp-route-id="@user.Id">@user.Username</a></th>
						<th>@user.Email</th>
						<th>

							<div class="row">
								<div class="col-md-4">
									<input type="hidden" name="UserId" value="@user.Id" />
								</div>
								<div class="col-md-4">
									<a asp-controller="Users" asp-action="Approve" asp-route-id="@user.Id" class="btn btn-success">Approve</a>
									<a asp-controller="Users" asp-action="Remove" asp-route-id="@user.Id" class="btn btn-danger">Remove</a>
								</div>
							</div>

						</th>
					</tr>
				}

			</tbody>
		</table>
	</div>
}
else
{
	<p style="text-align:center">No pending requests</p>
}