@model DeliveryDetailsViewModel
@inject IViewLocalizer Localizer

<div>
	<div class="card">
		<div class="card-header bg-primary text-white">
			@Localizer["Main Information"]
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>
							@Localizer["Category"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Goods Value"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Budget For Delivery"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Insurance"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Collection Date"]
						</b>
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@Localizer[Model.Category.ToString()]
					</div>
					<div class="col">
						@Model.GoodsValue
					</div>
					<div class="col">
						@Model.Price
					</div>
					<div class="col">
						@(Model.HasInsurance ? Localizer["Yes"] : Localizer["No"])
					</div>
					<div class="col">
						@Model.CollectionDate.ToShortDateString()
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>
							@Localizer["Payment Method"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Length"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Width"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Height"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Weight"]
						</b>
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@Model.PaymentMethod
					</div>
					<div class="col">
						@if (Model.LengthFirstPart > 0)
						{
							<span>
								@Model.LengthFirstPart @Localizer["meters"]
							</span>

						}
						@if (Model.LengthSecondPart != null && Model.LengthSecondPart > 0)
						{
							<span>
								@Model.LengthSecondPart @Localizer["centimeters"]
							</span>
						}
					</div>
					<div class="col">
						@if (Model.WidthFirstPart > 0)
						{
							<span>
								@Model.WidthFirstPart @Localizer["meters"]
							</span>
						}
						@if (Model.WidthSecondPart != null && Model.WidthSecondPart > 0)
						{
							<span>
								@Model.WidthSecondPart @Localizer["centimeters"]
							</span>
						}
					</div>
					<div class="col">
						@if (Model.HeightFirstPart > 0)
						{
							<span>
								@Model.HeightFirstPart @Localizer["meters"]
							</span>
						}
						@if (Model.HeightSecondPart != null && Model.HeightSecondPart > 0)
						{
							<span>
								@Model.HeightSecondPart @Localizer["centimeters"]
							</span>
						}
					</div>
					<div class="col">
						@Model.Weight @Localizer["kilograms"]
					</div>
				</div>
			</li>
			@if (Model.Photos.Any())
			{
				<li class="list-group-item">
					<div class="row">
						<div class="col">
							<b>
								@Localizer["Photos"]
							</b>
						</div>
						@foreach (var photo in Model.Photos)
						{
							<div class="col">
								<img src="~/images/@photo.Path" class="card-img">
							</div>
						}
					</div>
				</li>
			}
		</ul>

		<div class="card-header bg-primary text-white">
			@Localizer["Information For Pick Up"]
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>
							@Localizer["Property Type"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Location"]
						</b>
					</div>
					@if (Model.PickUpLocationZipCode != null)
					{
						<div class="col">
							<b>
								@Localizer["Zip Code"]
							</b>
						</div>
					}
					<div class="col">
						<b>
							@Localizer["Phone Number"]
						</b>
					</div>
					@if (Model.SenderEmail != null)
					{
						<div class="col">
							<b>
								@Localizer["Email"]
							</b>
						</div>
					}
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@Localizer[Model.PickUpPropertyType.ToString()]
					</div>
					<div class="col">
						@Model.PickUpLocation
					</div>
					@if (Model.PickUpLocationZipCode != null)
					{
						<div class="col">
							@Model.PickUpLocationZipCode
						</div>
					}
					<div class="col">
						@Model.SenderPhoneNumber
					</div>
					@if (Model.SenderEmail != null)
					{
						<div class="col">
							@Model.SenderEmail
						</div>
					}
				</div>
			</li>
		</ul>

		<div class="card-header bg-primary text-white">
			@Localizer["Information For Delivery"]
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>
							@Localizer["Property Type"]
						</b>
					</div>
					<div class="col">
						<b>
							@Localizer["Location"]
						</b>
					</div>
					@if (Model.DeliveryLocationZipCode != null)
					{
						<div class="col">
							<b>
								@Localizer["Zip Code"]
							</b>
						</div>
					}
					<div class="col">
						<b>
							@Localizer["Phone Number"]
						</b>
					</div>
					@if (Model.RecipientEmail != null)
					{
						<div class="col">
							<b>
								@Localizer["Email"]
							</b>
						</div>
					}
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@Localizer[Model.PickUpPropertyType.ToString()]
					</div>
					<div class="col">
						@Model.DeliveryLocation
					</div>
					@if (Model.DeliveryLocationZipCode != null)
					{
						<div class="col">
							@Model.DeliveryLocationZipCode
						</div>
					}
					<div class="col">
						@Model.RecipientPhoneNumber
					</div>
					@if (Model.RecipientEmail != null)
					{
						<div class="col">
							@Model.RecipientEmail
						</div>
					}
				</div>
			</li>
		</ul>
	</div>
	@if (Model.AdditionalDetails != null)
	{
		@await Html.PartialAsync("_AdditionalDetailsPartial", Model.AdditionalDetails)
	}
</div>