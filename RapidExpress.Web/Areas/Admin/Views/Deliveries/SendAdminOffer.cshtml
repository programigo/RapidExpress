@model SendOfferFormModel
@inject IViewLocalizer Localizer

<h1>@Model.DeliveryTitle</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Amount">
			@Localizer["Amount"]
		</label>
		<input id="amount-input" asp-for="Amount" class="first-part-input form-control mb-1" />
		<span asp-validation-for="Amount" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Currency">
			@Localizer["Currency"]
		</label>
		<select asp-for="Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
		<span asp-validation-for="Currency" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="hidden" asp-for="@Model.DeliveryId" value="@Model.DeliveryId" />
	</div>
	<div class="form-group">
		<input type="hidden" asp-for="@Model.DeliveryTitle" value="@Model.DeliveryTitle" />
	</div>
	<button id="submit-button" type="submit" class="btn btn-success">
		@Localizer["Send offer"]
	</button>
</form>