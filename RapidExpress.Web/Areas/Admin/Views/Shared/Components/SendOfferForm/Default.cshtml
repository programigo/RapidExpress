@model SendOfferFormModel
@inject IViewLocalizer Localizer

<button class="btn btn-primary" data-toggle="modal" data-target="#send-offer-modal-@Model.DeliveryId">
	@Localizer["Send offer"]
</button>

<div class="modal fade" id="send-offer-modal-@Model.DeliveryId" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">
					@Model.DeliveryTitle
				</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="post" asp-area="Admin" asp-controller="Deliveries" asp-action="SendAdminOffer">
					<div class="form-group">
						<label asp-for="Amount">
							@Localizer["Amount"]
						</label>
						<input required type="text" asp-for="Amount" class="first-part-input form-control mb-1" />
						<span asp-validation-for="Amount" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Currency">
							@Localizer["Currency"]
						</label>
						<select asp-for="Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
						<span asp-validation-for="Currency" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input type="hidden" asp-for="@Model.DeliveryId" value="@Model.DeliveryId" />
					</div>
					<button type="submit" class="btn btn-success">
						@Localizer["Send offer"]
					</button>
				</form>
			</div>
		</div>
	</div>
</div>